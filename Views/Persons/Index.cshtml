@model IEnumerable<PracticeManagement.Core.Models.Person>
@{
    ViewBag.Title = "Persons";
}

<div class="col-md-12">
    <div class="x_panel">
        <div class="x_title">
            <h3>Persons</h3>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">
            <table id="Persons" class=" data table table-striped no-margin">
                <thead>
                    <tr>
                        <th>Token</th>
                        <th>Person name</th>
                        <th>Fakultet</th>
                        <th><a href="@Url.Action("RegisterPerson","Account")" class="btn btn-primary btn-xs"><i class="fa fa-edit"></i>Add</a></th>
                        <th></th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Faculty.Name</td>
                        <td>
                            <a href="@Url.Action("Details","Persons", new { id = item.Id})" class="btn btn-default btn-xs"><i class="fa fa-folder"></i>Details</a>
                        </td>
                        @*<td><a href="@Url.Action("Edit","Persons", new { id = item.Id})" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i>Edit</a></td>*@
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>

</div>


@section scripts{
    <script>
        $(document).ready(function () {
            $('#Persons').DataTable();
        });
    </script>
}